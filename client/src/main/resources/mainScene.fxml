<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="nl.tudelft.oopp.demo.controllers.MainSceneController">
    <Label text="Hello world!"/>
    <Label text="This is a simple demo application."/>
    <Button fx:id="quoteButton" text="Quote!" onAction="#quoteButtonClicked"/>
    <Button fx:id="testButton" text="User!" onAction="#userButtonClicked"/>
    <Button fx:id="addBuildingButton" text="Add a building!" onAction="#addBuildingButtonClicked"/>
    <Button fx:id="listBuildingsButton" text="See all buildings!" onAction="#listBuildingsButtonClicked"/>
    <Button fx:id="deleteBuilding" text="Remove building with ID 7" onAction="#deleteBuildingButtonClicked"/>
</VBox>
